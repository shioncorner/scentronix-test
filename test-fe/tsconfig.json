{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "jsx": "preserve",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleDetection": "force",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "~actions": ["src/actions"],
      "~actions/*": ["src/actions/*"],
      "~app": ["src/app"],
      "~app/*": ["src/app/*"],
      "~auth": ["src/auth"],
      "~auth/*": ["src/auth/*"],
      "~components": ["src/components"],
      "~components/*": ["src/components/*"],
      "~constants": ["src/constants"],
      "~constants/*": ["src/constants/*"],
      "~context": ["src/context"],
      "~context/*": ["src/context/*"],
      "~data": ["src/data"],
      "~data/*": ["src/data/*"],
      "~env": ["./env.mjs"],
      "~hooks": ["src/hooks"],
      "~hooks/*": ["src/hooks/*"],
      "~lib": ["src/lib"],
      "~lib/*": ["src/lib/*"],
      "~prisma": ["prisma"],
      "~prisma/*": ["prisma/*"],
      "~schema": ["src/schema"],
      "~schema/*": ["src/schema/*"],
      "~store": ["src/store"],
      "~store/*": ["src/store/*"],
      "~styles": ["src/styles"],
      "~styles/*": ["src/styles/*"],
      "~translation": ["src/translation"],
      "~translation/*": ["src/translation/*"],
      "~types": ["src/types"],
      "~types/*": ["src/types/*"],
      "~/*": ["./*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2022",
    "verbatimModuleSyntax": true
  },
  "exclude": ["node_modules", ".next"],
  "include": ["**/*.ts", "**/*.tsx", "next-env.d.ts", ".next/types/**/*.ts", ".storybook/*.ts"]
}
